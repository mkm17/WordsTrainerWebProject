<!DOCTYPE html>

<style>
    .navbar-brand {
        background-image: url('../../Images/logo1.PNG');
        background-size: 60px 50px;
        background-repeat: no-repeat;
        background-position: center;
        height: 50px;
        width: 100px;
        border: none;
    }

        .navbar-brand:hover {
            background-image: url('../../Images/logo2.PNG');
        }

    #languageFlag {
        height: 35px;
        width: 50px;
        background-size: 50px 35px;
        vertical-align: middle;
        margin: 7px 0;
        margin-left: 15px;
    }

    .visibleNumber {
        border-radius: 50%;
        position: absolute;
        float: right;
        top: -2px;
        background-color: coral;
        min-width: 20px;
        height: 20px;
        color: white;
        text-align: center;
        font-size: medium;
        -moz-transition: all .51s;
        -o-transition: all .51s;
        -webkit-transition: all .51s;
        transition: all .51s;
    }

        .visibleNumber:hover {
            border-radius: 0;
            background-color: azure;
            color: black;
        }

    body {
        font-weight: 450;
        font-size: 14px;
        color: #FFFFFF;
        letter-spacing: 1px;
        opacity: 0.85;
        font-family: Roboto,Noto Sans,Helvetica Neue,Helvetica,Arial,sans-serif;
    }

    .navbar-fixed-top {
        background-color: rgb(3, 169, 244);
        border-color: rgb(3,150,244);
    }
</style>
<script src="/Scripts/jquery-1.10.2.js" type="text/javascript"></script>

<script type="text/javascript">

    $(document).ready(function () {

        $("#numberOfNewWords").click(function () {

            $.ajax({
                url: '/Home/AddNewLanguageWords',
                type: 'POST',
                contentType: "application/json; charset=utf-8",
                traditional: true,
                success: function (data) {

                    $("#numberOfNewWords").removeClass("visibleNumber")
                    $("#numberOfNewWords").text("");


                },
                error: function (error) {
                    //  alert(error.responseText);
                }

            });


        });

        $.ajax({
            url: '/Home/GetUserRemainingWords',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            traditional: true,
            success: function (data) {

                if (data > 0) {
                    $("#numberOfNewWords").addClass("visibleNumber")
                    $("#numberOfNewWords").text("NEW");
                }
            },
            error: function (error) {
                // alert(error.responseText);
            }

        });

        $.ajax({
            url: '/Home/GetCurrentLanguage',
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            traditional: true,
            success: function (data) {

                if (data != null) {
                    // $("#language").text(data)
                    $("#languageFlag").css("background-image", "url('/Images/" + data + "flag.png')");
                }
            },
            error: function (error) {
                // alert(error.responseText);
            }

        });

    });
</script>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @{
                    if (Request.IsAuthenticated)
                    {
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Learn", "Learn", "Home")</li>
                            <li>@Html.ActionLink("Your Words", "Index", "UserWords")<div id="numberOfNewWords"></div></li>
                            <li>@Html.ActionLink("Your Languages", "Index", "ChooseLanguage")</li>
                            <li><div id="languageFlag"></div></li>
                        </ul>
                    }
                }
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @RenderSection("SPAViews", required: false)
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Olunia Design</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
